<style>
body { background: url('http://subtlepatterns.com/patterns/old_mathematics.png') repeat;}
</style>

<div class="container">
  <% @var.each do |details| %>
  <% details["img_url"] == 'http://' ? img = 'http://i.qkme.me/3pi05y.jpg' : img = details["img_url"] %>
  <div class="row main">
    <div class="span3"></div>
      <div class="span3 crop">
        <img src='<%= img %>'>
      </div>
      <div class="span5 list">
      <% if details["gender"] == 'ma'
            gender = 'Male'
          elsif details["gender"] == 'fe'
            gender = 'Female'
          else
            gender = 'na'
          end %>
        <p><strong><%= details["first"] %> <%= details["last"] %></strong></p>
        <p><strong>Age:</strong> <%= details["age"] %></p>
        <%= "<p><strong>Gender:</strong> #{gender if gender != 'na'} </p>" %>
        <p><i class="icon-chevron-right"></i> <a href="<%= details["twitter"] %>"><%= details["twitter"] %></a></p>
        <p><i class="icon-chevron-right"></i> <a href="<%= details["github"] %>"><%= details["github"] %></a></p>
      </div>
    <div class="span1"></div>
  </div>
  <% end %>
</div>